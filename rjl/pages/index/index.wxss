/**index.wxss**/
page{

  width: 100%;
}
.container{
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;

}

   /*轮播图  */
.banner{
height: 150px;
width: 100%;
}
/*  */
.banner image{
width: 100%;
height: 150px;
}
    
.title{
  font-family:"trebuchet MS";
  font-size: 36rpx;
  color: rgb(0, 129, 0);
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
} 
.content{
  font-family:"trebuchet MS";
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
}  
.content1{
  font-family:"trebuchet MS";
  font-size: 32rpx;
  color: rgb(0, 129, 0);
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
} 
image{
  width: 100%;
  height: 300rpx;
  margin-bottom: 40rpx;
  margin-top: 16rpx;
}

.imgs{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  width: 100%;
  height: 300 rpx;
  background: rgb(242, 242, 242);
}
.imgs image{
  width: 30%;
  height: 280rpx;
  margin-right: 16rpx;
}
.attr{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  width: 100%;
  height: 300 rpx; 
  background: rgb(242, 242, 242);
}
.attr image{
  width: 48%;
  height: 360rpx;
  margin-right: 16rpx;
}
.attr .discript{
  display: flex;
  flex: 1;
}
.attr .discript2{
  display: flex;
  flex: 1;
  flex-direction: column;
}


.submit-container{
  width: 98%;
  border: 2rpx solid #eee;
  /* padding: 16rpx; */
  height: 580rpx;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
}
.submit-container .sub{
  display: flex;
  flex-direction: column;
  flex: 1;
  margin:8px;
}
.submit-container .sub .next {
  width: 60px;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2rpx solid #eee;
  margin-top: 16rpx;
  padding: 0 20rpx;
}
.submit-container .sub .btns{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.submit-container .sub .btns .submit{
  width: 60px;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2rpx solid #eee;
  margin-top: 16rpx;
  color: #fff;
  background: rgb(0, 118, 215);
  margin-left: 20rpx;
}

input{
  width: 90%;
  border: 2rpx solid #eee;
  font-size: 14px;
  margin-bottom: 16rpx;
}