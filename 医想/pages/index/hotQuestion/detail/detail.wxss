/* detail.wxss */
page{
  width: 100%;
}
.container{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 0px;
}

.item{
  display: flex;
  width: 100%;
  border-bottom: 1px solid #eee;
  flex-direction: column; 
}
.item .header{
  display: flex;
  height: 50px;
  width: 100%;
  flex-direction: row;
  align-items: center; 
  margin-top: 8px;
}
.header image{
  height: 50px;
  width: 50px;
  border-radius: 50%;
  margin: 8px 8px 0 8px;
  overflow: hidden;
}

.header .name{
  font-size: 15px;
  color: rgb(107, 107, 107);
}
.header .time{
  font-size: 10px;
  color: rgb(205, 205, 205);
  margin-left: 8px;

}


.content{
  line-height: 21px;
  margin: 8px 8px 0 8px;
  font-size: 14px;
  overflow: hidden;
  color: rgb(79, 79, 79);
  margin-bottom: 8px;
 
}
.answer{
  width: 100%;
  text-align: start;
  text-indent: 8px;
  height: 50px;
  line-height: 50px;
  color: rgb(107, 107, 107);
}
.reply{
  width: 100%;
   border-bottom: 2px solid  rgb(241, 241, 241); 
}

.reply .header{
  display: flex;
  height: 35px;
  width: 100%;
  flex-direction: row;
  align-items: center; 
}
.reply .header image{
  height: 30px;
  width: 30px;
  border-radius: 50%;
  margin: 0px 8px 0 8px;
  overflow: hidden;
}
.inset{
  display: flex;
  flex: 1;
}
 .huifu{
  font-size: 13px;
  height: 21px;
  line-height: 21px;
  margin-right: 8px;
  padding: 0 5px;
  color: rgb(197, 197, 197);

}
.answerReply{
  margin-left: 50px;
  /* border-bottom: 1px solid #ccc; */
}


.content .audio_detail{
  width: 400rpx;
