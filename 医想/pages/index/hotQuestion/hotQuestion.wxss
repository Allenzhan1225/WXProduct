page{
  width: 100%;
}
.container{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 0px;
}

.item{
  display: flex;
  width: 100%;
  height: 160px;
  border-bottom: 1px solid #eee;
  flex-direction: column; 
}
.item .header{
  display: flex;
  height: 50px;
  width: 100%;
  flex-direction: row;
  align-items: center; 
  margin-top: 8px;
}
.header image{
  height: 50px;
  width: 50px;
  border-radius: 50%;
  margin: 8px 8px 0 8px;
  overflow: hidden;
}

.header .name{
  font-size: 15px;
  color: rgb(107, 107, 107);
}
.header .time{
  font-size: 10px;
  color: rgb(205, 205, 205);
  margin-left: 8px;

}


.content{
  height: 63px;
  line-height: 21px;
  margin: 8px 8px 0 8px;
  font-size: 14px;
  overflow: hidden;
  color: rgb(79, 79, 79);
}

.footer{
  width: 100%;
  height: 30px;
  margin-bottom: 8px;
  display: flex;
  justify-content: flex-end;
  align-items: center;  
}
.footer image{
  height: 20px;
  width: 20px;
  border-radius: 50%;
}
.footer .text{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  margin:0 8px 0 0; 
}