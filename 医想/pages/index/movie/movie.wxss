/* movie.wxss */

.container{
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 0 0px;

  margin-bottom: 8px; 
  width: 100%;
  
}

.list_item {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: flex-start;
  width: 100%;
  height: 100px;
  /* margin-top: 8px; */
  border-bottom: 1px solid #ccc;
  /* border-radius: 8px; */
  /* box-shadow: 1px 1px 2px #ccc; */
}

.list_item  .img {
  height: 80px;
  width: 80px;
  margin: 10px;
}

.list_item .content {
  display: flex;
  flex: 1;
  margin: 10px 0;
  flex-direction: column;
}

.title{
  display: flex;
  flex-direction: row;
  height: 20px;
  line-height: 20px;
  align-items: center; 
}
.content .title .name{
  color: rgb(45 , 45, 45);
  font-size: 14px;
}
.content .title .date{
  margin-left: 8px;
  color: rgb(168, 168, 168);
  font-size: 10px;
}
.disc{
  display: flex;
  flex: 1;
  color: rgb(168, 168, 168);
  font-size: 13px;
  overflow: hidden;
  line-height: 20px;
}