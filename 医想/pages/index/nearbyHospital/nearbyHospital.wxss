/* nearbyHospital.wxss */
page{
  height: 100%;
  width: 100%;
}

.container{
  display: flex;
  flex: 1;
  flex-direction: column;
  padding: 0px;
  justify-content: flex-start;
  align-items: flex-start;
}

.item{
  display: flex;
  width: 100%;
  flex-direction: row;
  padding: 8px 8px;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  height: 2000px;
  background: yellow;
}
.item image{
  font-size: 13px;
  height: 60px;
  width: 60px;
  overflow: hidden;
}
.item .content {
  margin: 0px 8px;
  display: flex;
  flex: 1;
  flex-direction: column;
}
.item .title{
  display: flex;
  flex-direction: row;
  flex: 1;
  background: red;
  height: 25px;
  font-size: 15px;
}
.hospitalName{
  display: flex;
  flex: 1;
  background: yellow;
  font-size: 14px;
  overflow: hidden;
}
.tel{
  font-size: 12px;
  color: rgb(149, 149, 149);
  width: 120px;
}

.descript{
  display: flex;
  flex: 2;
  font-size: 13px;
  color: rgb(149, 149, 149);
  overflow: hidden;
}

.address {
  display: flex;
  flex: 1;
  font-size: 13px;
  color: rgb(149, 149, 149);
  height: 30px;
}
