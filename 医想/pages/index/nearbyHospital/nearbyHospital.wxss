 .item{
  display: flex;
  width: 100%;
  flex-direction: row;
  padding: 8px 8px;
  border-bottom: 1px solid #ccc;
  align-items: center;
  overflow: hidden;
  height: 96px;
 
}  
.item image{

  height: 80px;
  width: 80px;
  overflow: hidden;
}
.item .content {
  margin: 0px 8px;
  display: flex;
  flex: 1;
  flex-direction: column;
  
}
.item .title{
  display: flex;
  flex-direction: row;
  height: 25px;
  font-size: 15px;
  line-height: 25px;
}
.hospitalName{
  display: flex;
  flex: 1;

  font-size: 13px;
  overflow: hidden;
  line-height: 25px;
}
.tel{
  font-size: 11px;
  color: rgb(149, 149, 149);
  width: 118px;
  margin-left: 4px;
}

.descript{
  display: flex;
  height: 40px;
  line-height: 20px;
  font-size: 13px;
  color: rgb(149, 149, 149);
  overflow: hidden;

}

.address {
  display: flex;
  font-size: 12px;
  color: rgb(149, 149, 149);
  height: 30px;
  line-height: 30px;
  margin-right: 8px;
 

}
