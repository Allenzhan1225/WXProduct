/* my.wxss */
page{
  height: 100%;
}

.container{
  display: flex;
  flex-direction: column;
  flex:1;
  padding: 0px;
  margin: 0 auto; 
}
.header{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 150px;
  align-items: center;
  justify-content: center;
  background: url('https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=3676886262,1146007982&fm=27&gp=0.jpg');
  background-size: 100% 150px;
}
.header .img{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 12px;
}

.header text{
  font-size: 13px;
  color: #333;
}

.content {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;

}


.btn1,.btn2,.btn3,.btn4{
  height: 44px;
  margin-bottom: 8px;
  line-height: 44px;
  width: 300px;
  color: #fff;
  font-size: 13px;
}
.btnbg{
  display: flex;
  flex-direction: row;
  height: 75px;
  width: 300px;
}
.btnbg1{
    display: flex;
    flex: 1;
    align-items: flex-start;
}
.btnbg2{
   display: flex;
    flex: 1;
    align-items: flex-end;
}

.btn1,.btn4{
  border-radius: 6px; 
}

.btn1 {
  margin-top: 60px;
  background:  rgb(19, 123 ,62);
}
.btn2{
  background: rgb(242, 150, 163);
  width: 150px;
  justify-content: flex-start;
  align-items: flex-start;
}
.btn3{
  background: rgb(30, 121, 184);
  width: 150px;
  align-items: flex-end;
  justify-content: flex-end;
}
.btn4{
  background:  rgb(230, 84 ,40);
}