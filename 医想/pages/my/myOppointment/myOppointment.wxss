page{
  height: 100%;
  width: 100%;
}
.container1{
  display: flex;
  flex-direction: column;
  

}

.item{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgb(241, 241, 241);
  justify-content: center;
  align-items: center;
  padding: 8px;

}

.item .content{
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 8px;
}



.item .btn{
  display: flex;
  width: 80px;
  height: 60px;
  background: rgb(30, 121, 184);
  font-size:17px;
  color: #fff; 
  margin-right: 15px;
  text-align: center;
  line-height: 60px;
  flex-direction: column;
}
.btn_cont1{
  height: 30px;
  text-align: center;
  line-height: 30px; 
}
.btn_cont2{
  height: 30px;
  text-align: center;
  line-height: 30px; 
}


.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 6px;
}
.header .name{
  display: flex;
  color: rgb(45, 45, 45);
  flex: 1;
  font-size: 15px;
}
.header .tel{
  width: 95px;
  color: rgb(141, 141, 141);
  font-size: 9px;
}
.discript{
  font-size: 13px;
  color: rgb(165, 165, 165);
  line-height: 18px;
}
.time{
  margin-top: 6px;
  font-size: 11px;
  color: rgb(178, 178, 178);
}