<!--oppointment.wxml-->
<view class="contianer">
  <form>
    <view class="section">
      <block wx:for="{{items}}">
        <view class="item">
          <text>{{item.name}}</text>
          <input placeholder="{{item.placeholder}}" />
        </view>
      </block>
    </view>
  </form>

   <picker mode="date"  value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
    <view class="picker">
      当前选择: {{time}}
    </view>
  </picker>
</view>
