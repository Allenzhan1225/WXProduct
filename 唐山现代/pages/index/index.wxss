/**index.wxss**/
.container{
  display: flex;  
  padding: 0px;
  width: 100%;
}
.img{
  width: 100%;
  height: 120px;

}


.listitem{
  display: flex;
  flex-direction: row;
  align-self: flex-start;
  margin: 8px;


}

.listitem image {
  height: 100px;
  width: 100px;
}
.subview{
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap; 
  width: 70%;
  
}

.subview-item{
  display: flex;
  width: 40%;
  margin-top: 4px;
  margin-left: 8px;
  font-size: 10pt;
  border: 1px solid lightgray;
  align-items: center;
  justify-content: center;
}


.foot{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 8px;
  width: 100%;

}

.foot image {
  height: 200px;
  width: 50%;

}