<block wx:for="{{list}}">
  <view class="list-cell">
       <image src="{{item.img}}"></image>
       <view class="list-celltitle">
          <view class="item_title" ><text style="color:{{item.color}}">{{item.title}}</text></view>
          <view class="item_title" style="font-size:12pt;"><text>{{item.detial}}</text></view>
       </view>
       <view class="" style="background:{{item.color}};height:58px;width:4px;margin:0px;"></view>
  </view>
</block>

